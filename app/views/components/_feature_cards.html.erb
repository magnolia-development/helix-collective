<section class="feature-cards">
  <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
    <div class="mx-auto max-w-screen-md text-center mb-8 lg:mb-16">
      <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white"><%= title %></h2>
      <p class="font-light text-gray-500 dark:text-gray-400 sm:text-xl"><%= subtitle %></p>
    </div>
    <div class="feature-cards-grid">
      <% cards.each do |card| %>
        <%= render "components/feature_cards/card", card %>
      <% end %>
    </div>
  </div>
</section>
